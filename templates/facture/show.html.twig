{% extends 'base-front.html.twig' %}



{% block body %}
    <h1>Facture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facture.id }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ facture.montant }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ facture.date ? facture.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image_signature</th>
                <td>{{ facture.imageSignature }}</td>
            </tr>
            <tr>
                <th>Num_facture</th>
                <td>{{ facture.numFacture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_facture_index') }}">Retour</a>

    <a href="{{ path('app_facture_edit', {'id': facture.id}) }}">edit</a>

    {{ include('facture/_delete_form.html.twig') }}
