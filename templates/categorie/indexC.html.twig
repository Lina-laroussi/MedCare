{% extends 'base-front.html.twig' %}





{% block body %}
<div class="my-background" style="background-image: url('{{ asset('Parapharmacie.jpg') }}');">
  <!-- Le contenu de votre site web -->
    <div class="breadcrumb-bar-six">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-12 col-12">
                    <h2 class="breadcrumb-title">Doctoshop</h2>
                    <nav aria-label="breadcrumb" class="page-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Accueil</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Catégories </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container ">
        <div class="row flex-nowrap">
            <ul>
                {% for categorie in categories %}

                        <h3 class="mt-5">{{ categorie.nom }}</h3>

                        <a href="{{ path('app_produit_index1', {'categorie': categorie.id}) }}" class="btn btn-primary">
                            Voir les produits
                        </a>

                {% else %}
                    <li>Aucune catégorie trouvée.</li>
                {% endfor %}
            </ul>
        </div>
    </div>
    </div>
{% endblock %}

