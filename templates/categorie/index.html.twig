{% extends 'base-back.html.twig' %}

{% block body %}
    <h1>Categorie index</h1>
 <div class="container"

 <div class="row justify-content-center">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Etat</th>
                <th>Marque</th>
                <th>Groupe_age</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td>{{ categorie.description }}</td>
                <td>{{ categorie.etat }}</td>
                <td>{{ categorie.marque }}</td>
                <td>{{ categorie.groupeAge }}</td>
                
                <td>
                    <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}"  class="btn btn-primary" >show</a>
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}"  class="btn btn-primary" >edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_new') }}"  class="btn btn-primary" >Create new</a>
        </div>
                </div>

        
        
{% endblock %}
