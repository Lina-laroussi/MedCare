{% extends 'base-back.html.twig' %}

{% block stylesheets %}

    <link href="assets/img/favicon.png" rel="icon">

    <link rel="stylesheet" href="{{ asset('FrontOffice/css/bootstrap.min.css') }}">

    <link rel="stylesheet" href="{{ asset('FrontOffice/plugins/fontawesome/css/fontawesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('FrontOffice/plugins/fontawesome/css/all.min.css') }}">

    <link rel="stylesheet" href="{{ asset('FrontOffice/css/feather.css') }}">

    <link rel="stylesheet" href="{{ asset('FrontOffice/css/bootstrap-datetimepicker.min.css') }}">

    <link rel="stylesheet" href="{{ asset('FrontOffice/plugins/select2/css/select2.min.css') }}">

    <link rel="stylesheet" href="{{ asset('FrontOffice/css/style.css') }}">

    <link rel="shortcut icon" href="{{ asset('BackAdmin/img/favicon.png') }}">

    <link rel="stylesheet" href="{{ asset('BackAdmin/css/bootstrap.min.css') }}">

    <link rel="stylesheet" href="{{ asset('BackAdmin/plugins/fontawesome/css/fontawesome.min.css') }}">

    <link rel="stylesheet" href="{{ asset('BackAdmin/plugins/fontawesome/css/all.min.css') }}">

    <link rel="stylesheet" href="{{ asset('BackAdmin/css/feather.css') }}">

    <link rel="stylesheet" href="{{ asset('BackAdmin/plugins/select2/css/select2.min.css') }}">

    <link rel="stylesheet" href="{{ asset('BackAdmin/plugins/owl-carousel/owl.carousel.min.css') }}">

    <link rel="stylesheet" href="{{ asset('BackAdmin/plugins/daterangepicker/daterangepicker.css') }}">

    <link rel="stylesheet" href="{{ asset('BackAdmin/css/style.css') }}">

{% endblock %}


{% block body %}
    <div class="page-wrapper">
    <div class="content container-fluid">
    <div class="col-md-7 col-lg-8 col-xl-12">
        <div class="card">
            <div class="card-body">

                {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                <div class="row form-row">
                    <div class="col-12 col-md-12">
                        <div class="d-flex justify-content-end">
                            {% if user.isBlocked == false %}
                                <a class="btn btn-danger submit-btn" href="{{ path('bloquer_utilisateur',{'id':user.id}) }}">Bloquer</a>
                            {% else %}
                                <a  class="btn btn-success submit-btn" href="{{ path('debloquer_utilisateur',{'id':user.id}) }}">Débloquer</a>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <div class="change-avatar">
                                <div class="profile-img">
                                    <img src="{{ asset('uploads/utilisateurs/' ~ user.image|default('uploads/utilisateurs/user.png') ) }}" alt="User Image">
                                </div>
                                <div class="upload-img">
                                    <div class="change-photo-btn">
                                        <span><i class="fa fa-upload"></i> Ajouter</span>
                                        {{ form_widget(form.photo,{attr:{'class':'upload'}}) }}
                                    </div>
                                    <small class="form-text text-muted">JPG, GIF ou PNG autorisés. Taille maximale de 2 Mo</small>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_errors(form.photo,{attr:{'class':'text-danger'}})  }}
                            </div>
                        </div>
                    </div>


                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>Nom</label>
                            {{ form_widget(form.nom,{attr:{'class':'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.nom,{attr:{'class':'text-danger'}})  }}
                        </div>
                    </div>


                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>Prénom</label>
                            {{ form_widget(form.prenom,{attr:{'class':'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.prenom,{attr:{'class':'text-danger'}})  }}
                        </div>
                    </div>


                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>Date de naissance</label>
                            {{ form_widget(form.date_de_naissance) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.date_de_naissance,{attr:{'class':'text-danger'}})  }}
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>Email </label>
                            {{ form_widget(form.email,{attr:{'class':'form-control '}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.email,{attr:{'class':'text-danger'}})  }}
                        </div>
                    </div>


                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>Téléphone</label>
                            {{ form_widget(form.num_tel,{attr:{'class':'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.num_tel,{attr:{'class':'text-danger'}})  }}
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>Sexe</label>
                            {{ form_widget(form.sexe,{attr:{'class':'form-select form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.sexe,{attr:{'class':'text-danger'}})  }}
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group">
                            <label>Adresse</label>
                            {{ form_widget(form.adresse,{attr:{'class':'form-control '}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.adresse,{attr:{'class':'text-danger'}})  }}
                        </div>
                    </div>
                </div>
                <div class="submit-section">
                    <button type="submit" class="btn btn-primary submit-btn" >Modifier</button>
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
    </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('BackAdmin/js/jquery-3.6.0.min.js') }}"></script>

    <script src="{{ asset('BackAdmin/js/bootstrap.bundle.min.js') }}"></script>

    <script src="{{asset('BackAdmin/js/feather.min.js') }}"></script>

    <script src="{{ asset('BackAdmin/plugins/select2/js/select2.min.js') }}"></script>

    <script src="{{ asset('BackAdmin/plugins/slimscroll/jquery.slimscroll.min.js') }}"></script>

    <script src="{{ asset('BackAdmin/plugins/owl-carousel/owl.carousel.min.js') }}"></script>

    <script src="{{ asset('BackAdmin/plugins/apexchart/apexcharts.min.js') }}"></script>
    <script src="{{ asset('BackAdmin/plugins/apexchart/chart-data.js') }}"></script>

    <script src="{{ asset('BackAdmin/js/moment.min.js') }}"></script>
    <script src="{{ asset('BackAdmin/plugins/daterangepicker/daterangepicker.js') }}"></script>

    <script src="{{ asset('BackAdmin/js/script.js') }}"></script>
{% endblock %}