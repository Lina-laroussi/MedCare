{% extends 'sideBar.html.twig' %}


{% block content %}
    <h3>Liste Des Rendez-vous</h3>
<div class="tab-content pt-0">
<div id="pat_appointments" class="tab-pane fade show active">
<div class="card card-table mb-0">
<div class="card-body">
<div class="table-responsive">
<table class="table table-hover table-center mb-0">
        <thead>
            <tr>
                <th>Medecin</th>
                <th>Etat</th>
                <th>Date</th>
                <th>Heure_debut</th>
                <th>Heure_fin</th>

            </tr>
        </thead>
        <tbody>
        {% for rendez_vou in rendez_vouses %}
            <tr>
                <td>{{ rendez_vou.planning.medecin.nom}} {{ rendez_vou.planning.medecin.prenom}}</td>
                <td>{{ rendez_vou.etat }}</td>
                <td>{{ rendez_vou.date ? rendez_vou.date|date('Y-m-d') : '' }}</td>
                <td>{{ rendez_vou.heureDebut ? rendez_vou.heureDebut|date('H:i:s') : '' }}</td>
                <td>{{ rendez_vou.heureFin ? rendez_vou.heureFin|date('H:i:s') : '' }}</td>
                <td class="text-end">
                <div class="table-action">
                    {{ include('Front-Office/rendez_vous/_confirm_form.html.twig') }}
                </div>
                </td>
                <td class="text-end ">
                <div class="table-action">
                    <a class="mr-3 btn btn-sm bg-info-light " href="{{ path('app_rendez_vous_show', {'id': rendez_vou.id}) }}"><i class="far fa-eye"></i>show</a>
                    <a class="mr-3 btn btn-sm bg-success-light" href="{{ path('app_rendez_vous_edit', {'id': rendez_vou.id}) }}"><i class="fas fa-times"></i>edit</a>
                </div>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
</div>
</div>
{% endblock %}
