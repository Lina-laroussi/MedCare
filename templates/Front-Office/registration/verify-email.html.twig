{% extends 'base-front.html.twig' %}

{% block title %}Verification Email{% endblock %}

{% block body %}
    <body class="account-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 offset-md-2">

                    <div class="account-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-md-7 col-lg-6 login-left">
                                <img src="{{ asset('FrontOffice/img/emailVerif.png') }}" class="img-fluid" alt="Doccure Verification">
                            </div>
                            <div class="col-md-12 col-lg-6 login-right">
                                <div class="login-header">
                                    <h3>Entrer votre code de v√©rification</h3>
                                </div>
                                {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                                <div class="form-group form-focus">
                                    {{ form_widget(form.code,{attr:{'class':'form-control floating'}}) }}
                                    <label class="focus-label">Code</label>
                                </div>
                                <div class="form-group">
                                    {{ form_errors(form.code,{attr:{'class':'text-danger'}})  }}
                                </div>

                                <button class="btn btn-primary w-100 btn-lg login-btn" type="submit">Envoyer</button>

                                {{ form_end(form) }}
                                <div class="login-or">
                                    <span class="or-line"></span>
                                    <span class="span-or">or</span>
                                </div>
                                <a class="btn btn-primary w-100 btn-lg login-btn"  href="{{ path('app_renvoyer_code') }}" >Renvoyer</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    </body>
{% endblock %}

{% block javascripts %}


    </script><script src="FrontOffice/js/jquery-3.6.0.min.js"></script>

    <script src="{{ asset('FrontOffice/js/bootstrap.bundle.min.js') }}"></script>

    <script src="{{ asset('FrontOffice/plugins/swiper/js/swiper.min.js') }}"></script>

    <script src="{{ asset('FrontOffice/js/slick.js') }}"></script>

    <script src="{{ asset('FrontOffice/js/aos.js') }}"></script>

    <script src="{{ asset('FrontOffice/js/script.js') }}"></script>


{% endblock %}





