{% extends 'base-front.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <body class="account-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 offset-md-2">

                    <div class="account-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-md-7 col-lg-6 login-left">
                                <img src="{{ asset('FrontOffice/img/login-banner.png') }}" class="img-fluid" alt="Doccure Register">
                            </div>
                            <div class="col-md-12 col-lg-6 login-right">
                                <div class="login-header">
                                    <h3>Inscription Médecin <a href="{{ path('app_registration_pharmacien')}}">Vous êtes pharmacien?</a></h3>
                                </div>
                                {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                                <div class="form-group form-focus">
                                    {{ form_widget(form.nom,{attr:{'class':'form-control floating'}}) }}
                                    <label class="focus-label">Nom</label>
                                </div>
                                <div class="form-group">
                                    {{ form_errors(form.nom,{attr:{'class':'text-danger'}})  }}
                                </div>

                                <div class="form-group form-focus">
                                    {{ form_widget(form.prenom,{attr:{'class':'form-control floating'}}) }}
                                    <label class="focus-label">Prenom</label>
                                </div>
                                <div class="form-group">
                                    {{ form_errors(form.prenom,{attr:{'class':'text-danger'}})  }}
                                </div>

                                <div class="form-group form-focus">
                                    {{ form_widget(form.email,{attr:{'class':'form-control floating'}}) }}
                                    <label class="focus-label">Email</label>
                                </div>
                                <div class="form-group">
                                    {{ form_errors(form.email,{attr:{'class':'text-danger'}})  }}
                                </div>

                                <div class="form-group form-focus">
                                    {{ form_widget(form.password.first,{attr:{'class':'form-control floating'}}) }}
                                    <label class="focus-label">Mot de Passe</label>
                                </div>
                                <div class="form-group">
                                    {{ form_errors(form.password.first,{attr:{'class':'text-danger'}})  }}
                                </div>

                                <div class="form-group form-focus">
                                    {{ form_widget(form.password.second,{attr:{'class':'form-control floating'}}) }}
                                    <label class="focus-label">Confirmer Mot de Passe</label>
                                </div>
                                <div class="form-group">
                                    {{ form_errors(form.password.second,{attr:{'class':'text-danger'}})  }}
                                </div>
                                <input type="hidden" id="form_captcha" name="form[captcha]" />
                                <div class="text-end">
                                    <a class="forgot-link" href="{{ path('app_login')}}">Vous avez déjà un compte?</a>
                                </div>

                                <button class="btn btn-primary w-100 btn-lg login-btn" type="submit">S'inscrire</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    </body>
{% endblock %}

{% block javascripts %}

    <script src="https://www.google.com/recaptcha/api.js?render=6LdeQs4kAAAAAFYyjg2TIXxufYFxIGaUjRMEk_U8&onload=recaptchaCallback_form_captcha" async defer></script>

    <script>
        var recaptchaCallback_form_captcha = function() {
            grecaptcha.execute('6LdeQs4kAAAAAFYyjg2TIXxufYFxIGaUjRMEk_U8', {action: 'registration_form_submission'}).then(function(token) {
                document.getElementById('form_captcha').value = token;
            });
        };
    </script>

    </script><script src="FrontOffice/js/jquery-3.6.0.min.js"></script>

    <script src="{{ asset('FrontOffice/js/bootstrap.bundle.min.js') }}"></script>

    <script src="{{ asset('FrontOffice/plugins/swiper/js/swiper.min.js') }}"></script>

    <script src="{{ asset('FrontOffice/js/slick.js') }}"></script>

    <script src="{{ asset('FrontOffice/js/aos.js') }}"></script>

    <script src="{{ asset('FrontOffice/js/script.js') }}"></script>


{% endblock %}