{% extends 'base-front.html.twig' %}

{% block body %}
<div class="col-md-7 col-lg-8 col-xl-9">
    <h1> Fiche Medicale</h1>
    <div class="card">
        <div class="card-body pt-0">            
            <div class="tab-content">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ fiche_medicale.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom Patient</th>
                            <td>{{ fiche_medicale.description }}</td>
                        </tr>
                        <tr>
                            <th>Allergies</th>
                            <td>{{ fiche_medicale.allergies }}</td>
                        </tr>
                        <tr>
                            <th>Pathologie</th>
                            <td>{{ fiche_medicale.pathologie }}</td>
                        </tr>
                        <tr>
                            <th>Date de creation</th>
                            <td>{{ fiche_medicale.dateDeCreation ? fiche_medicale.dateDeCreation|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Date de modification</th>
                            <td>{{ fiche_medicale.dateDeModification ? fiche_medicale.dateDeModification|date('Y-m-d') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
                <a href="{{ path('app_fiche_medicale_edit', {'id': fiche_medicale.id}) }}" class="btn btn-primary submit-btn"> Modifier </a>
                {{ include('Front-Office/ficheMedicale/_delete_form.html.twig') }}
