{% extends 'base-front.html.twig' %}



{% block body %}
<body class="account-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                    <div class="account-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-md-7 col-lg-6 login-left">
                                <img src="{{ asset('FrontOffice/img/login-banner.png') }}" class="img-fluid" alt="Login Banner">
                            </div>
                            <div class="col-md-12 col-lg-6 login-right">
                                <div class="login-header">
                                    <h3>Mot de Passe oublié?</h3>
                                    <p class="small text-muted">Entrez votre email pour obtenir un lien de réinitialisation du mot de passe</p>
                                </div>

                                <form >
                                    <div class="form-group form-focus">
                                        {{ form_widget(form.email,{attr:{'class':'form-control floating'}}) }}
                                        <label class="focus-label">Email</label>
                                    </div>
                                    <div class="form-group">
                                        {{ form_errors(form.email,{attr:{'class':'text-danger'}})  }}
                                    </div>
                                    <button class="btn btn-primary w-100 btn-lg login-btn" type="submit">réinitialiser mot de passe</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
{% endblock %}