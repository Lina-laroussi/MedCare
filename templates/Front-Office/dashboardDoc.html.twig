{% extends 'base-front.html.twig' %}


{% block body %}
            <!--Section1 : head -->
            <div class="col-md-7 col-lg-8 col-xl-9">
                <div class="row">
                    <div class="col-lg-4 col-md-12">
                        <div class="card dash-cards">
                            <div class="card-body">
                                <div class="dash-top-content">
                                    <div class="circle-bar circle-bar1">
                                        <div class="circle-graph1" data-percent="75">
                                            <img src="{{ asset('FrontOffice/img/icon-01.png') }}" class="img-fluid" alt="patient">
                                        </div>
                                    </div>
                                    <div class="dash-widget-info">
                                        <h6 class="text-center"> Nombre de medicaments </h6>
                                        <h3 class="text-center">{{ TotalMedicament }}</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12">
                        <div class="card dash-cards">
                            <div class="card-body">
                                <div class="dash-top-content">
                                    <div class="circle-bar circle-bar2">
                                        <div class="circle-graph2" data-percent="75">
                                            <img src="{{ asset('FrontOffice/img/icon-03.png') }}" class="img-fluid" alt="patient">
                                        </div>
                                    </div>
                                    <div class="dash-widget-info">
                                        <h6 class="text-center">Nombre total de Consultation </h6>
                                        <h3 class="text-center">{{ totalConsultations }}</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <div class="col-lg-4 col-md-12">
                    <div class="card dash-cards">
                        <div class="card-body">
                            <div class="dash-top-content">
                                <div class="circle-bar circle-bar3">
                                    <div class="circle-graph3" data-percent="50">
                                        <img src="{{ asset('FrontOffice/img/icon-4.png') }}" class="img-fluid" alt="patient">
                                   </div>
                                </div>
                                <div class="dash-widget-info">
                                    <h6 class="text-center">Revenu d'aujourd'hui</h6>
                                    <h3 class="text-center">{{ TotalRevenus }}</h3>
                                </div>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
            <!--Section2 : body : consultations -->
            <div class="row">
                <div class="col-lg12">
                    <div class="card dash-cards">
                        <div class="card-header">
                            <div class="today-appointment-title">
                                <h5 class="mb-0">Les Rendez-vous d'aujourd'hui</h5>
                                <a href="#"><h6 class="mb-0">Voir tout <i class="feather-arrow-right"></i></h6></a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover table-center mb-0">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <h2 class="table-avatar ">
                                                    <a href="#" class="avatar avatar-m me-2"><img class="avatar-img" src="{{ asset('FrontOffice/img/patients/patient.jpg')}}" alt="User Image"></a>
                                                    <a href="#">Richard<span>#PT0016</span></a>
                                                </h2>
                                            </td>
                                            <td class="text-center"><a class="call-status" href="{{ path('app_consultation_new') }}"> consultation </a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>         
            <!--Section3 : body : ordonnance -->   
            <div class="row">
                 <!--Section nombre de maladie courant --> 
                <div class="col-lg-6 d-flex">
                    <div class="card dash-cards flex-fill">
                        <div class="card-header">
                            <div class="today-appointment-title">
                                <h5 class="mb-0">Nombre de maladie courant</h5>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="earnings-chart"></div>
                        </div>
                    </div>
                </div>
                 <!--Section nombre de medicament -->
                <div class="col-lg-6 d-flex">
                    <div class="card dash-cards flex-fill">
                        <div class="card-header">
                            <div class="today-appointment-title">
                                <h5 class="mb-0">Number of medicaments added per day</h5>
                            </div>
                        </div>
                        <div class="card-body">
                            <canvas id="myChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <!--Section4 : body : RDV : graphe --> 
            <div class="row">
                <div class="col-lg-12">
                    <div class="card dash-cards xyz">
                        <div class="card-header">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h5 class="card-title">Nombre consultation par day </h5>
                                </div>
                                <div class="col-auto chart-select d-flex">
                                    <div class="me-2">
                                        <select class="select">
                                            <option>per day</option>
                                            <option>per month</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div id="call-chart"></div>
                        </div>
                    </div>
                </div>
            </div>
            

{% endblock %}  

