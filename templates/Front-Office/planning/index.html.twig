{% extends 'sideBar.html.twig' %}

{% block lien %}
<a href="{{ path('app_planning_new', {'id': user.id}) }}" class="btn btn-primary btn-sm" >Ajouter planning</a>
{% endblock %}
{% block content %}
<div class="tab-content pt-0">
<div id="pat_appointments" class="tab-pane fade show active">
<div class="card card-table mb-0">
<div class="card-body">
<div class="table-responsive">
<table class="table table-hover table-center mb-0">
    <table class="table">
        <thead>
            <tr>
                <th>Date_debut</th>
                <th>Date_fin</th>
                <th>Description</th>
                <th>Heure_debut</th>
                <th>Heure_fin</th>
            </tr>
        </thead>
        <tbody>
        {% for planning in plannings %}
            <tr>
                <td>{{ planning.dateDebut ? planning.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ planning.dateFin ? planning.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ planning.description }}</td>
                <td>{{ planning.heureDebut ? planning.heureDebut|date('H:i:s') : '' }}</td>
                <td>{{ planning.heureFin ? planning.heureFin|date('H:i:s') : '' }}</td>
                <td class="text-end ">
                <div class="table-action">
                    <a class="mr-3 btn btn-sm bg-info-light " href="{{ path('app_planning_show', {'id': planning.id}) }}"><i class="far fa-eye"></i>consulter</a>
                    <a class="mr-3 btn btn-sm bg-success-light" href="{{ path('app_planning_edit', {'id': planning.id}) }}"><i class="fas fa-edit"></i>modifier</a>

                </div>

                </td>
                    
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
</div>
{% if isPaginated  %}
                <div class="d-flex justify-content-center">
                    <nav aria-label="col Page navigation example">
                        <ul class="pagination">
                            {% if page != 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_planning_index', {page: page - 1, nbre: nbre}) }}">Previous</a></li>
                            {% endif %}
                            {% for i in range(1, nbrePage) %}
                                <li class="page-item">
                                    <a class="page-link"  href="{{ path('app_planning_index', {page: i, nbre: nbre}) }}">{{ i }}</a>
                                </li>
                            {% endfor %}
                            {% if page != nbrePage %}
                                <li class="page-item">
                                    <a class="page-link"  href="{{ path('app_planning_index', {page: page + 1, nbre: nbre}) }}">Next</a>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>

                </div>
            {% endif %}
</div>
{% endblock %}
