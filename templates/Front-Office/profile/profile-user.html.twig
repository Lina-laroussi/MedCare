{% extends 'dashboard-user.html.twig' %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('FrontOffice/css/bootstrap.min.css') }}">

    <link rel="stylesheet" href="{{ asset('FrontOffice/plugins/fontawesome/css/fontawesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('FrontOffice/plugins/fontawesome/css/all.min.css') }}">

    <link rel="stylesheet" href="{{ asset('FrontOffice/css/feather.css') }}">

    <link rel="stylesheet" href="{{ asset('FrontOffice/css/bootstrap-datetimepicker.min.css') }}">

    <link rel="stylesheet" href="{{ asset('FrontOffice/plugins/select2/css/select2.min.css') }}">

    <link rel="stylesheet" href="{{ asset('FrontOffice/css/style.css') }}">

{% endblock %}


{% block content %}
    <div class="col-md-7 col-lg-8 col-xl-9">
        <div class="card">
            <div class="card-body">

                {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                    <div class="row form-row">
                        <div class="col-12 col-md-12">
                            <div class="form-group">
                                <div class="change-avatar">
                                    <div class="profile-img">
                                        <img src="{{ asset('FrontOffice/img/patients/patient.jpg') }}" alt="User Image">
                                    </div>
                                    <div class="upload-img">
                                        <div class="change-photo-btn">
                                            <span><i class="fa fa-upload"></i> Ajouter Votre Photo</span>
                                            <input type="file" class="upload">
                                        </div>
                                        <small class="form-text text-muted">JPG, GIF ou PNG autorisés. Taille maximale de 2 Mo</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% if is_granted('ROLE_MEDECIN') or is_granted('ROLE_PATIENT') %}
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label>Nom</label>
                                {{ form_widget(form.nom,{attr:{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label>Prénom</label>
                                {{ form_widget(form.prenom,{attr:{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label>Date de naissance</label>
                                    {{ form_widget(form.date_de_naissance) }}
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label>Email </label>
                                {{ form_widget(form.email,{attr:{'class':'form-control '}}) }}
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label>Téléphone</label>
                                {{ form_widget(form.num_tel,{attr:{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label>Sexe</label>
                                {{ form_widget(form.sexe,{attr:{'class':'form-select form-control'}}) }}
                            </div>
                        </div>
                        {% endif %}

                        {% if is_granted('ROLE_PATIENT')  %}
                        <div class="col-12">
                            <div class="form-group">
                                <label>Adresse</label>
                                {{ form_widget(form.adresse,{attr:{'class':'form-control '}}) }}
                            </div>
                        </div>
                            <div class="col-12">
                                    <div class="form-group ">
                                        <label>Biographie</label>
                                        {{ form_widget(form.description,{attr:{'class':'form-control '}}) }}
                                    </div>
                            </div>
                        {% else  %}
                            <div class="col-12">
                                <div class="form-group ">
                                    <label>Biographie</label>
                                    {{ form_widget(form.description,{attr:{'class':'form-control '}}) }}
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Cabinet</h4>
                                    <div class="row form-row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Adresse</label>
                                                {{ form_widget(form.adresse,{attr:{'class':'form-control ','rows':5}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="submit-section">
                        <button type="submit" class="btn btn-primary submit-btn" >Confirmer</button>
                    </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>

{% endblock %}