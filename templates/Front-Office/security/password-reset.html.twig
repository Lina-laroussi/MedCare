{% extends 'base-front.html.twig' %}



{% block body %}
    <body class="account-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 offset-md-2">

                    <div class="account-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-md-7 col-lg-6 login-left">
                                <img src="{{ asset('FrontOffice/img/login-banner.png') }}" class="img-fluid" alt="Login Banner">
                            </div>
                            <div class="col-md-12 col-lg-6 login-right">
                                <div class="login-header">
                                    <h3>Réinitialiser mot de passe</h3>
                                </div>
                                {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                                <div class="form-group form-focus">
                                    {{ form_widget(form.password.first,{attr:{'class':'form-control floating'}}) }}
                                    <label class="focus-label">Mot de Passe</label>
                                </div>
                                <div class="form-group">
                                    {{ form_errors(form.password.first,{attr:{'class':'text-danger'}})  }}
                                </div>
                                <div class="form-group form-focus">
                                    {{ form_widget(form.password.second,{attr:{'class':'form-control floating'}}) }}
                                    <label class="focus-label">Confirmer Mot de Passe</label>
                                </div>
                                <div class="form-group">
                                    {{ form_errors(form.password.second,{attr:{'class':'text-danger'}})  }}
                                </div>
                                <button class="btn btn-primary w-100 btn-lg login-btn" type="submit">réinitialiser</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    </body>
{% endblock %}