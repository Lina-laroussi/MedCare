{% extends 'Menu.html.twig' %}


{% block content %}
    <h1>Pharmacie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pharmacie.id }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ pharmacie.adresse }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ pharmacie.nom }}</td>
            </tr>
            <tr>
                <th>Num_tel</th>
                <td>{{ pharmacie.numTel }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ pharmacie.description }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ pharmacie.etat }}</td>
            </tr>
            <tr>
                <th>Horaire</th>
                <td>{{ pharmacie.horaire }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ pharmacie.email }}</td>
            </tr>
            <tr>
                <th>Matricule</th>
                <td>{{ pharmacie.matricule }}</td>
            </tr>
            <tr>
                <th>Services</th>
                <td>{{ pharmacie.services }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_pharmacie_index') }}" class="btn btn-primary mt-3">{{ button_label|default('Retour') }}</a>

    <a href="{{ path('app_pharmacie_edit', {'id': pharmacie.id}) }}" class="btn btn-primary mt-3">{{ button_label|default('Modifier') }}</a>


    {{ include('pharmacie/_delete_form.html.twig') }}
{% endblock %}
