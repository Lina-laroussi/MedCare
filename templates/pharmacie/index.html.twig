{% extends 'Menu.html.twig' %}

{% block content %}
    <h1>Mes Pharmacies </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adresse</th>
                <th>Nom</th>
                <th>Num_tel</th>
                <th>Etat</th>
                <th>Horaire</th>
                <th>Email</th>
                <th>Matricule</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pharmacie in pharmacies %}
            <tr>
                <td>{{ pharmacie.id }}</td>
                <td>{{ pharmacie.adresse }}</td>
                <td>{{ pharmacie.nom }}</td>
                <td>{{ pharmacie.numTel }}</td>
                <td>{{ pharmacie.etat }}</td>
                <td>{{ pharmacie.horaire }}</td>
                <td>{{ pharmacie.email }}</td>
                <td>{{ pharmacie.matricule }}</td>
                <td>
                    <a href="{{ path('app_pharmacie_show', {'id': pharmacie.id}) }}" class="btn btn-primary mt-3">{{ button_label|default('Voir') }}</a>
                    <a href="{{ path('app_pharmacie_edit', {'id': pharmacie.id}) }}" class="btn btn-primary mt-3">{{ button_label|default('Modifier') }}</a>
                    <a href="{{ path('app_facture_new', {'id': pharmacie.id}) }}" class="btn btn-primary mt-3">{{ button_label|default('Ajouter une facture') }}</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pharmacie_new') }}" class="btn btn-primary mt-3">{{ button_label|default('Ajouter une nouvelle pharmacie ') }} </a>
{% endblock %}
