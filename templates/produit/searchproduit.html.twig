{% extends 'base-front.html.twig' %}

{% block title %}Les produits
{% endblock %}

{% block body %}
<div class="my-background" style="background-image: url('{{ asset('Parapharmacie.jpg') }}');">

        {# une barre de titre simple avec un fond de couleur gris clair. #}
    <section class="bg-light p-3">
        <h1>Les produits</h1>
    </section>
    <li><a href="{{ path('ChercherPrixProduit')}}">Recherche Par Prix</a></li>

      <li>

