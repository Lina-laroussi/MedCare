  {{ form_start( searchproduit,{'attr': {'class':'form-horizontal','novalidate':'novalidate'}} ) }}
            {{ form_widget(searchproduit) }}
            {{ form_end(searchproduit) }}


    <section class="row">
        {% for produit in categorie.produits %}
        
            <div class="col-4 mt-4">
                <div class="border border-dark rounded p-2 clearfix">
                    <h2>{{ produit.nom }}</h2>
                    <p>{{ produit.prix }} Dt</p>
                    <p>{{ produit.description }} </p>
                    <img src="{{ asset('uploads/') ~ produit.image }}" alt="Image de {{ produit.nom }}">
                    <hr>
                    <a href="{{path("cart_add", {id: produit.id})}}" class="btn btn-primary">
                        <i class="bi bi-cart-plus"></i> Ajouter au panier
                    </a>
                           
                </div>
            </div>
            
        {% endfor %}
    </section>
