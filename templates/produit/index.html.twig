
{% extends 'base-back.html.twig' %}


{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Etat</th>
                <th>Quantite</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
