{% extends 'base-back.html.twig' %}


{% block body %}
    <h1>Produit</h1>
 <div class="container" style="margin-left: 30%" >

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ produit.etat }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                {% if produit.image %}
<img src="{{ asset('uploads/' ~ produit.image) }}" width="30px" alt="{{ produit.nom }}" />
{% endif %}
                
                </td>                                 
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}" class="btn btn-primary" >back to list</a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-primary">edit</a>

    {{ include('produit/_delete_form.html.twig') }}
    </div>
{% endblock %}


